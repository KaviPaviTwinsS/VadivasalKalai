<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="@dimen/dp_5">

    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progressbar_custom"
            android:padding="50dp"
            android:visibility="visible" />

        <androidx.cardview.widget.CardView
            android:id="@+id/main_linear_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardElevation="@dimen/dp_4"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_15"

                android:paddingRight="@dimen/dp_15">


                <LinearLayout
                    android:id="@+id/layoutLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <pasu.vadivasal.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/City"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_14"
                        app:asset_font_file_name="@string/font_sourcesans_pro_semibold" />

                    <pasu.vadivasal.view.TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        app:asset_font_file_name="@string/font_sourcesans_pro_regular"
                        tools:text="Madurai" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <pasu.vadivasal.view.TextView
                        android:id="@+id/tvTitleDOB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_date_of_birth"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_14"
                        app:asset_font_file_name="@string/font_sourcesans_pro_semibold" />

                    <pasu.vadivasal.view.TextView
                        android:id="@+id/tvDOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        app:asset_font_file_name="@string/font_sourcesans_pro_regular"
                        tools:text="29-09-1993" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <pasu.vadivasal.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_14"
                        app:asset_font_file_name="@string/font_sourcesans_pro_semibold" />

                    <pasu.vadivasal.view.TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/green_background_color"
                        android:textSize="@dimen/sp_16"
                        app:asset_font_file_name="@string/font_sourcesans_pro_regular" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPlayingRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <pasu.vadivasal.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/role"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_14"
                        app:asset_font_file_name="@string/font_sourcesans_pro_semibold" />

                    <pasu.vadivasal.view.TextView
                        android:id="@+id/role_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        app:asset_font_file_name="@string/font_sourcesans_pro_regular"
                        tools:text="Alanganallur,Palamedu &amp; Kangayam" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutBattingStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <pasu.vadivasal.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bio"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_14"
                        app:asset_font_file_name="@string/font_sourcesans_pro_semibold" />

                    <pasu.vadivasal.view.TextView
                        android:id="@+id/tvBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        app:asset_font_file_name="@string/font_sourcesans_pro_regular"
                        tools:text="@string/dummy_bio" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutBowlingStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <pasu.vadivasal.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bowling Style"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_14"
                        app:asset_font_file_name="@string/font_sourcesans_pro_semibold" />

                    <pasu.vadivasal.view.TextView
                        android:id="@+id/tvBowlingStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        app:asset_font_file_name="@string/font_sourcesans_pro_regular" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
