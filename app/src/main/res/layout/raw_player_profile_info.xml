<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="@dimen/dp_5">

    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:padding="50dp"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progressbar_custom"
            android:visibility="visible" />

    <android.support.v7.widget.CardView
        android:id="@+id/main_linear_card"
        app:cardElevation="@dimen/dp_4"
        android:visibility="gone"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_15"

            android:paddingRight="@dimen/dp_15">


        <LinearLayout
            android:id="@+id/layoutLocation"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <pasu.vadivasal.view.TextView
                app:asset_font_file_name="@string/font_sourcesans_pro_semibold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/City"
                android:textAllCaps="true"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14" />

            <pasu.vadivasal.view.TextView
                app:asset_font_file_name="@string/font_sourcesans_pro_regular"
                android:id="@+id/tvLocation"
                tools:text="Madurai"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <pasu.vadivasal.view.TextView
                app:asset_font_file_name="@string/font_sourcesans_pro_semibold"
                android:id="@+id/tvTitleDOB"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/hint_date_of_birth"
                android:textAllCaps="true"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14" />

            <pasu.vadivasal.view.TextView
                app:asset_font_file_name="@string/font_sourcesans_pro_regular"
                android:id="@+id/tvDOB"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="29-09-1993"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <pasu.vadivasal.view.TextView
                app:asset_font_file_name="@string/font_sourcesans_pro_semibold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Email"
                android:textAllCaps="true"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14" />

            <pasu.vadivasal.view.TextView
                app:asset_font_file_name="@string/font_sourcesans_pro_regular"
                android:id="@+id/tvEmail"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:textColor="@color/green_background_color"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPlayingRole"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <pasu.vadivasal.view.TextView
                app:asset_font_file_name="@string/font_sourcesans_pro_semibold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/role"
                android:textAllCaps="true"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14" />

            <pasu.vadivasal.view.TextView
                app:asset_font_file_name="@string/font_sourcesans_pro_regular"
                android:id="@+id/role_txt"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="Alanganallur,Palamedu &amp; Kangayam"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBattingStyle"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <pasu.vadivasal.view.TextView
                app:asset_font_file_name="@string/font_sourcesans_pro_semibold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/bio"
                android:textAllCaps="true"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14" />

            <pasu.vadivasal.view.TextView
                app:asset_font_file_name="@string/font_sourcesans_pro_regular"
                android:id="@+id/tvBio"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="@string/dummy_bio"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBowlingStyle"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <pasu.vadivasal.view.TextView
                app:asset_font_file_name="@string/font_sourcesans_pro_semibold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Bowling Style"
                android:textAllCaps="true"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14" />

            <pasu.vadivasal.view.TextView
                app:asset_font_file_name="@string/font_sourcesans_pro_regular"
                android:id="@+id/tvBowlingStyle"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView></LinearLayout></android.support.v4.widget.NestedScrollView>
