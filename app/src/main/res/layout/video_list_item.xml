<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/video_thumb"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:src="@drawable/images" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <pasu.vadivasal.view.TextView
            android:id="@+id/video_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:maxLines="3"
            android:text="Hello Card this is the text where the typing of india and blaa blaa"
            android:textColor="#3d3d3d"
            android:textSize="15sp"
            app:asset_font_file_name="@string/font_sourcesans_pro_regular" />

        <pasu.vadivasal.view.TextView
            android:id="@+id/video_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="29 sep"
            android:textSize="14sp"
            app:asset_font_file_name="@string/font_sourcesans_pro_semibold" />
    </LinearLayout>
</LinearLayout>
