<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <!--<ImageView-->
        <!--android:background="#e6000000"-->
        <!--android:layout_height="150dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/images" />-->
    <TextView
        android:background="@color/colorPrimary"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/images" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_ball"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:scaleType="centerInside"
       app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:id="@+id/lnr_name"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/img_ball"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <pasu.vadivasal.view.TextView
            app:asset_font_file_name="@string/font_roboto_slab_light"
            android:id="@+id/tvAppName"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="I Love"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <pasu.vadivasal.view.TextView
            app:asset_font_file_name="@string/font_roboto_slab_bold"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:text=" Jallikattu"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:layout_below="@+id/lnr_name"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">

        <pasu.vadivasal.view.TextView
            app:asset_font_file_name="@string/font_sourcesans_pro_italic"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Your "

            android:textColor="@color/sign_up_text_light"
            android:textSize="@dimen/sp_16" />

        <pasu.vadivasal.view.TextView
            app:asset_font_file_name="@string/font_sourcesans_pro_italic"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="social"
            android:textColor="@color/sign_up_text_color"
            android:textSize="@dimen/sp_16" />

        <pasu.vadivasal.view.TextView
            app:asset_font_file_name="@string/font_sourcesans_pro_italic"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=" cricket network"
            android:textColor="@color/sign_up_text_light"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scaleType="centerInside"
       app:srcCompat="@drawable/ic_arrow_back_white_24dp"
        android:visibility="gone" />
</RelativeLayout>
