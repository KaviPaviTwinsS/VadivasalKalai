<?xml version="1.0" encoding="utf-8"?><!-- item_feed.xml -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"

            android:layout_height="50dp">
            <pasu.vadivasal.view.CircleImageView
                android:id="@+id/ivUserProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="5dp"
                android:layout_marginLeft="3dp"
                android:layout_gravity="left|center"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:gravity="left|center"
                android:paddingLeft="3dp"
                android:layout_marginLeft="51dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
        </FrameLayout>

        <pasu.vadivasal.view.SquaredFrameLayout
            android:id="@+id/vImageRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivFeedLoading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivFeedThumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/loading_shape"
                    android:layout_gravity="center"/>
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivFeedCenter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
                <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                    android:id="@+id/exoPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="200dp"
                    app:resize_mode="fixed_height"
                    app:surface_type="texture_view"
                    app:use_controller="true"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:soundEffectsEnabled="false">
                </com.google.android.exoplayer2.ui.SimpleExoPlayerView>
            </FrameLayout>

            <View
                android:id="@+id/vBgLike"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_like_circle_background"
                android:visibility="invisible" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivLike"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_heart_outline_white"
                android:visibility="invisible" />

        </pasu.vadivasal.view.SquaredFrameLayout>
        <TextView
            android:id="@+id/tvFeedBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_heart_outline_grey" />

            <ImageButton
                android:id="@+id/btnComments"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_feed_action"
                app:srcCompat="@drawable/ic_comment_outline_grey" />

            <ImageButton
                android:id="@+id/btnMore"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="gone"
                android:background="@drawable/btn_feed_action"
                app:srcCompat="@drawable/ic_more_grey" />
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/btnShare"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_feed_action"
                app:srcCompat="@drawable/ic_share_black_24dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_heart_small_blue" />

                <TextView
                    android:id="@+id/tvLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:inAnimation="@anim/slide_in_likes_counter"
                    android:outAnimation="@anim/slide_out_likes_counter"
                    android:text="0 Likes"
                    android:visibility="gone" />

                <TextSwitcher
                    android:id="@+id/tsLikesCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:inAnimation="@anim/slide_in_likes_counter"
                    android:outAnimation="@anim/slide_out_likes_counter"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 likes"
                        android:textColor="@color/text_like_counter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_like_counter" />
                </TextSwitcher>
            </LinearLayout>

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tvCommentCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="View all 1250 comments"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="5dp"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center|left"
                android:gravity="left"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/comment_lay_shape">
            <TextView
                android:id="@+id/tvAddComment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_10"
                android:hint="Add a comment"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:inputType="text" />
            </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>