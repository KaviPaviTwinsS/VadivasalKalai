<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/pad_5dp">
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_10dp">
        <pasu.vadivasal.view.TextView
            android:id="@+id/alert_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/sp_20"
            android:text="Choose one"
            app:asset_font_file_name="@string/font_roboto_slab_bold" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/divider"/>
    <LinearLayout
        android:id="@+id/camera_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@color/gray_text"
            app:srcCompat="@drawable/ic_photo_camera" />

        <pasu.vadivasal.view.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Add Photo"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center_vertical"
            app:asset_font_file_name="@string/font_sourcesans_pro_semibold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/video_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@color/gray_text"
            app:srcCompat="@android:drawable/presence_video_away"/>

        <pasu.vadivasal.view.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Add Video"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center_vertical"
            app:asset_font_file_name="@string/font_sourcesans_pro_semibold" />
    </LinearLayout>
</LinearLayout>